<Window x:Class="KSharpGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KSharpGui"
        mc:Ignorable="d"
        Title="K-Sharp Toolbox" Height="350" Width="525">
    <Grid>
        <StackPanel>
        <Menu IsMainMenu="True" Background="#0d0e36">
            <MenuItem Header="_To-Do Liste" Foreground="White" Padding="7px"></MenuItem>
                <MenuItem Header="_Passwordgenerator" Foreground="White" Padding="7px"></MenuItem>
                <MenuItem Header="_Gruppenersteller" Foreground="White" Padding="7px"></MenuItem>
        </Menu>
        <Grid>
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
        </Grid>
        </StackPanel>
    </Grid>
</Window>
